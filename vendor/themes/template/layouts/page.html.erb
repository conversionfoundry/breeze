<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'responsive.css' %>
    <%= javascript_include_tag "modernizr.min.js" %>

    <!-- This theme supports Breeze Commerce -->
    <%= stylesheet_link_tag "breeze/breeze" %>
    <%= javascript_include_tag "breeze/breeze" %>
    <title><%= page.title %></title>
  </head>
  <body>
        
    <h1><%= page.title %></h1>
    
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Project name</a>
          <div class="nav-collapse">
            <%= bootstrap_nav(:recurse => true) %>
          </div><!-- /.nav-collapse -->
        </div>
      </div><!-- /navbar-inner -->
    </div>    
    
    <%= breadcrumb %>
    
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12"><%= region :page_header %></div>
      </div>
      <div class="row-fluid">
        <div class="span12"><%= region :above_content %></div>
      </div>
      <div class="row-fluid">
        <div class="span4"><%= region :column_left %></div>
        <div class="span4"><%= region :column_middle %></div>
        <div class="span4"><%= region :column_right %></div>
      </div>
      <div class="row-fluid">
        <div class="span12"><%= region :below_content %></div>
      </div>
      <div class="row-fluid">
        <div class="span12"><%= region :footer %></div>
      </div>      
    </div>

  </body>
</html>