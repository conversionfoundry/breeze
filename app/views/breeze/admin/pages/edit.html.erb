<%= breeze_form_for @page, :as => :page, :url => admin_page_path(@page), :remote => true do |form| %>
  <%= scrollable_layout do %>
    <h1>Edit <%= @page.class.name.demodulize %></h1>
    <%= render "/breeze/admin/shared/error_messages", :target => @page, :object_name => :page %>
    <%= edit_form_for form %>
  <% end %>

  <%= content_tag :div, :class => "fake-right-sidebar" do %>
    <%= submit_tag "Save", :class => "large green save button" if @page.editable? %>
    <%= link_to "View/edit this page", @page.permalink, :target => :_blank, :class => "large edit button" if @page.editable? %>
    <%= link_to "Delete this page", admin_page_path, :method => :delete, :remote => true, :confirm => "Really delete this page (and all its sub-pages)? There is no undo!", :class => "large red delete button" if @page.editable? %>
  <% end %>
<% end %>

