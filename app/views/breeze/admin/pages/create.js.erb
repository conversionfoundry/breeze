<% if @page.errors.empty? %>
  $('#new_page').closest('.ui-dialog-content').dialog('close');
  $('#new_page').closest('.ui-dialog').remove();
  $('#page_<%= @page.parent_id %>').replaceWith('<%= escape_javascript render(:partial => "breeze/admin/pages/page", :object => @page.parent) %>');
  $('#page_<%= @page.id%>>a').click();
<% else %>
  $('#new_page').replaceWith('<%= escape_javascript render(:template => "/breeze/admin/pages/new") %>');
<% end %>
